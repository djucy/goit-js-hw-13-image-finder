{{#each this}}
<li>
    <div class="photo-card">
        <div class="pic-container">
            <img class="pic" height="240" width ="360" loading="lazy"
            srcset="{{src.small}},{{src.medium}},{{src.large}},{{src.large2x}}"
            sizes="(min-width:1200px) 270w, (min-width:768px) 354w, (min-width:480px) 450w"
            src="{{src.medium}}" alt="{{query}}" />
        </div>
        
        <div class="stats">
            <p class="stats-item">
                <i class="material-icons md-dark">
                    photo_camera
                </i>
                {{this.photographer}}
            </p>
            <p class="stats-item">
                <i class="material-icons md-dark">
                    home
                </i>
                {{photographer_url}}
            </p>
            <p class="stats-item stats-item_position">
                <i class="material-icons md-dark material-icons__position">
                    palette
                </i>
                <span class="color-span" style="background-color:{{avg_color}}"></span>
            </p>
        </div>
    </div>
</li>
{{/each}}
{{!-- webformatURL - ссылка на маленькое изображение для списка карточек
largeImageURL - ссылка на большое изображение (смотри пункт 'дополнительно')
likes - количество лайков
views - количество просмотров
comments - количество комментариев
downloads - количество загрузок --}}